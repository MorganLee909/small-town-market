<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1" name="viewport"/>
        <title><%= vendor.name %></title>
        <link rel="icon" href="#">
        <link rel="stylesheet" href="/shared/shared.css">
        <link rel="stylesheet" href="/vendor/vendor.css">
    </head>
    <body>
        <%- include("../shared/menu.ejs") %>

        <div class="display">
            <div class="mainContent">
                <h2>ITEMS</h2>

                <button class="button" onclick="openModal()">NEW ITEM</button>

                <table>
                    <thead></thead>
                    <tbody></tbody>
                </table>
            </div>

            <div class="sidebar">
                <% if(owner === true){ %>
                    <a class="iconButton editIcon" href="/vendors/<%=vendor.url%>/edit">
                        <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg>
                    </a>
                <% } %>

                <h1><%= vendor.name %></h1>

                <h3 class="capitalize"><%=vendor.city%>, <%=vendor.state%></h3>
                
                <h3 class="capitalize"><%=vendor.county%> County</h3>

                <p class="desc"><%=vendor.description%></p>
            </div>
        </div>

        <div id="newItem" class="modal modalHide">
            <form action="/items" method="post">
                <h1>NEW ITEM</h1>

                <label>Name:
                    <input type="text" name="name" required>
                </label>

                <label>Price:
                    <input type="number" name="price" min="0" step="0.01" required>
                </label>

                <label>Measurement Unit:
                    <input type="string" name="unit" required>
                </label>

                <label>Quantity:
                    <input type="number" min="0" required>
                </label>

                <label>Description:
                    <textarea name="description"></textarea>
                </label>

                <div>
                    <input class="button" type="submit" value="SUBMIT">

                    <button class="button" onclick="closeModal()">CANCEL</button>
                </div>
            </form>
        </div>

        <script>
            const openModal = ()=>{
                document.getElementById("newItem").classList.remove("modalHide");
            }

            const closeModal = ()=>{
                event.preventDefault();
                document.getElementById("newItem").classList.add("modalHide");
            }
        </script>
    </body>
</html>